{
	"compilerOptions": {
	  "target": "ES6",                          // Cible de compilation ECMAScript
	  "module": "ES6",                          // Module ES6
	  "declaration": true,                      // Générer des fichiers de déclaration .d.ts
	  "outDir": "./dist",                       // Dossier de sortie
	  "rootDir": "./src",                       // Dossier source
	  "strict": true,                           // Activer toutes les vérifications strictes
	  "esModuleInterop": true,                  // Activer l'interopérabilité des modules ES
	  "skipLibCheck": true,                     // Ignorer la vérification des fichiers de déclaration
	  "forceConsistentCasingInFileNames": true, // Forcer la casse cohérente dans les noms de fichiers
	  "moduleResolution": "node",               // Résolution des modules de type Node
	  "resolveJsonModule": true,                // Permet l'importation de modules JSON
	  "isolatedModules": true,                  // Isoler les modules pour éviter les erreurs au runtime
	  "allowSyntheticDefaultImports": true,     // Permet les imports par défaut synthétiques
	  "noEmit": false                           // Permettre l'émission des fichiers de sortie
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
  }
  